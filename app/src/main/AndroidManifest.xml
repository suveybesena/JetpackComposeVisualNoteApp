<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jetpackcomposevisualnoteapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JetpackComposeVisualNoteApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/noteicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/noteicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposeVisualNoteApp"
        tools:targetApi="31">
        <activity
            android:name=".features.screen.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackComposeVisualNoteApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>